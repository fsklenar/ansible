# Client config for: {{ peer.name }}
# Generated by Ansible

[Interface]
PrivateKey = {{ peer.private_key | default('REPLACE_WITH_PEER_PRIVATE_KEY') }}
Address = {{ peer.allowed_ips }}
DNS = {{ wg_dns | default('1.1.1.1') }}

[Peer]
PublicKey = {{ wg_server_public_key }}
{% if peer.preshared_key is defined and peer.preshared_key | length > 0 %}
PresharedKey = {{ peer.preshared_key }}
{% endif %}
Endpoint = {{ wg_server_public_ip }}:{{ wg_port }}
AllowedIPs = {{ wg_allowed_ips }}
PersistentKeepalive = {{ wg_persistent_keepalive }}
